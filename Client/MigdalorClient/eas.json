{
"cli": {
    "version": ">= 7.6.0" // You can keep this, 16.2.1 satisfies it
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      // --- Correct Placement for workingDirectory ---
      "workingDirectory": "Client/MigdalorClient",
      // ---------------------------------------------
      "android": {
        "credentialsSource": "remote"
       // "buildType": "apk"
      },
      "ios": {
        "credentialsSource": "remote",
        "simulator": false
      }
    },
    "preview": {
      "distribution": "internal",
      // --- Add here too if you use the 'preview' profile ---
      "workingDirectory": "Client/MigdalorClient"
    },
    "production": {
       // --- Add here too if you use the 'production' profile ---
       "workingDirectory": "Client/MigdalorClient"
    }
  },
  "submit": {
    "production": {}
  }
}